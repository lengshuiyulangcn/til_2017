<h2>Upload a new image</h2>
<%= form_for @changeset, users_path(@conn, :upload_avatar), 
             [multipart: true], fn f -> %>
  <div class="form-group">
    <label>Image</label>
    <%= file_input f, :avatar%>
    <%= error_tag f, :avatar%>
  </div>
  <div class="form-group">
    <%= submit "Submit", class: "btn btn-default" %>
  </div>
<% end %>
